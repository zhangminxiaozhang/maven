<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
           >
            <Button
                android:id="@+id/back_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xbu"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:text="背部升起"
                android:textSize="20sp" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/back_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="背部降下"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:background="@drawable/xbu"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/leg_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="腿部升起"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="19sp"
                android:background="@drawable/xlu" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/leg_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="腿部降下"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="19sp"
                android:background="@drawable/xlu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/both_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="背升腿曲"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="19sp"
                android:background="@drawable/xbl" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/both_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="背平腿伸"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:background="@drawable/xbl"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/left_re"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="左翻"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:background="@drawable/xleft" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/right_re"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="盖板降"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:background="@drawable/xright" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/gai_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="盖板升"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:background="@drawable/xgai" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/gai_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="右翻"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:background="@drawable/xgai" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/bian_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="便盆升"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:background="@drawable/xbian" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/bian_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="便盆降"
                android:gravity="bottom|center"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:background="@drawable/xbian" />

        </LinearLayout>


    </LinearLayout>

    </ScrollView>
</LinearLayout>
